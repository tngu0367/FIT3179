{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Rainfall and dam storage levels in Australia.",
  "data": {
    "url": "data/rainfall_and_storage.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": ["2014-15", "2015-16", "2016-17", "2017-18", "2018-19", "2019-20", "2020-21", "2021-22"],
      "as": ["year", "value"]
    },
    {
      "calculate": "datum.year_value[1]",
      "as": "value"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "year_value[0]",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Volume"
    },
    "color": {
      "field": "Indicator",
      "type": "nominal",
      "scale": {"domain": ["Area-average rainfall (a)", "Accessible volume in major dam storages as of June 30 (b)"], "range": ["#1f77b4", "#ff7f0e"]}
    },
    "tooltip": [
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "value", "type": "quantitative", "title": "Value"}
    ]
  }
}
