{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/rainfall_and_storage_comp.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "Black coal", "Brown coal", "Met. coke", "Coal by-products a",
        "Natural gas", "Crude oil and ORF", "LPG", "Refined products",
        "Liquid/gas biofuels", "Biomass - wood", "Biomass - bagasse",
        "Wind electricity", "Solar electricity", "Hydro-electricity",
        "Total electricity", "Solar hot water"
      ],
      "as": ["source", "value"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "source",
      "type": "nominal",
      "title": "Energy Source"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Energy Supply (PJ)"
    },
    "color": {
      "field": "source",
      "type": "nominal"
    },
    "tooltip": [
      {"field": "source", "title": "Source"},
      {"field": "value", "title": "Value (PJ)"}
    ]
  }
}
